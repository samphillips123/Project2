<%- include('./partials/header.ejs') %>
        <a class="nav-link" href="/projects/<%= project.id %>">Back to Project</a>
    </nav>
    <h2>Edit Project</h2>
    <form action="/projects/<%= project.id %>?_method=PUT" method="POST">
        <label for="project-name">Name:</label>
        <input type="text" value="<%= project.projectName %>" id="project-name" name="projectName"/>
    </br>
        <label for="project-cat">Category:</label>
        <input type="text" value="<%= project.category %>" id="project-cat" name="category"/>
    </br>
        <label for="project-desc">Description:</label>
        <input type="text" value="<%= project.description %>" id="project-desc" name="description"/>
    </br>
        <label for="project-budget">Budget:</label>
        <input type="number" value="<%= project.budget %>" id="project-budget" name="budget"/>
    </br>
        <label for="project-image">Image:</label>
        <input type="text" value="<%= project.projectImg %>" id="project-image" name="projectImg"/>
    </br>
        <label for="project-complete">Complete:</label>
        <input type="checkbox" id="project-complete" name="projectComplete"
            <%= project.projectComplete ? 'checked' : 'unchecked' %>
        />
    </br>
        <input type="submit" value="Update Project"/>
    </form>
<%- include('./partials/footer.ejs') %>
