<%- include('./partials/header.ejs') %>
        <a class="nav-link" href="/projects/<%= project.id %>/editProject">Edit Project</a>
        <a class="nav-link" href="/projects/<%= project.id %>/newMaterial">Add Material</a>
    </nav>
    <h2><%= project.projectName %> <%- project.projectComplete === true ? ' - Complete' : '' %></h2>
    <p>
        <label class="project-data">Category:</label> <%= project.category %> </br>
        <label class="project-data">Description:</label> <%= project.description %> </br>
        <label class="project-data">Budget:</label> $<%= project.budget %> </br>
        <label class="project-data">Estimated Cost:</label> </br>
        <label class="project-data">Actual Cost:</label> </br>
        <label class="project-data">Description:</label> <%= project.description %> </br>
    </p>
    <div class="show-project-image">
        <!-- <% console.log(project.projectImg) %> -->
        <img 
        <%- project.projectImg === '' ? 'hidden' : '' %> src="<%= project.projectImg %>" alt="Image for the <%= project.projectName %> project." />
    </div>
    <ul class="materials-list">
        <% for (let i = 0; i < project.materials.length; i++) { %>
            <li>
                <a href="/projects/<%= project.id %>/material/<%= i %>">
                    <%= project.materials[i].materialName %>
                </a>
                <%- project.materials[i].materialComplete === true ? ' - Complete' : '' %>
            </li>
        <% } %>
    </ul>
    <form action="/projects/<%= project.id %>?_method=DELETE" method="POST">
        <input type="submit" value="Delete"/>
    </form>
<%- include('./partials/footer.ejs') %>
